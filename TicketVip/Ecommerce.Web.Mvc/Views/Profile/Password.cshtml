@model EditPasswordDto

@{
    ViewData["Title"] = "Change Password";
}


@section Styles{
<link href="~/others/css/profile.css" rel="stylesheet" />
}

<div class="page-title-box">
    <h4 class="page-title">Profile Settings</h4>
</div>

<div class="card mb-4">
    <div class="card-body">
        <div class="row">
            <div class="col-12 col-md-3 mb-3" id="profilesetting">
                <partial name="_ProfileSideNav" />
            </div>
            <div class="col mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="lh-sm mt-2">
                            <h4 class="mb-0">Change Password</h4>
                            <div class="mb-2"><small>To change password enter your details below and click Save Changes.</small></div>
                        </div>
                        <form class="form mt-5" asp-action="Password" enctype="multipart/form-data" method="post">
                            <div class="row">
                                <div class="col-12 col-sm-6">
                                    <div class="row">
                                        <div class="col">
                                            <div class="mb-3">
                                                <label>Current Password</label>
                                                <input class="form-control" type="password" autocomplete="new-password" asp-for="OldPassword">
                                                <span asp-validation-for="OldPassword"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <div class="mb-3">
                                                <label>New Password</label>
                                                <input class="form-control" type="password" autocomplete="new-password" asp-for="NewPassword">
                                                <span asp-validation-for="NewPassword"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <div class="mb-3">
                                                <label>Confirm <span class="d-none d-xl-inline">Password</span></label>
                                                <input class="form-control" type="password" autocomplete="new-password" asp-for="ConfirmNewPassword">
                                                <span asp-validation-for="ConfirmNewPassword"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="text-start">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="row my-2">
                                <div class="d-grid gap-2 d-sm-block">
                                    <button type="submit" class="btn btn-grass-2 px-5">Update</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-3 mb-3">
                <partial name="_ProfileLeftSide" />
            </div>
        </div>
    </div>
</div>



@section Scripts{
<script src="~/others/js/profile.js"></script>
}