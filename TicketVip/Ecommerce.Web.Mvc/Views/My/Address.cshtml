@model CustomerDto;
@{
    ViewData["Title"] = "Address";
    Layout = LayoutPage.ShopLayout;
}

<div class="top-header bg-soft-ocean">
    <div class="container">
        <div class="page-title">
            <span>Thông tin Doanh nghiệp</span>
        </div>
    </div>
</div>
<div class="container">
    <div class="p-4 content-section customer-profile">
        <div class="row">
            <div class="col-md-4">
                <partial name="_CustomerAccountTab" />
            </div>
            <div class="col-md-8">
                <div class="tab-content" id="v-pills-tabContent">
                    <div class="tab-pane fade bg-white show active p-2">
                        <h5 class="mb-3 text-uppercase fw-bold">Đia chỉ</h5>
                        <div>
                            <div class="border my-2">
                                <div class="p-2">
                                    <div class="mb-3">
                                        <span class="d-block fw-700 text-sm-3">Địa chỉ checkout Vé</span>
                                        <span class="d-block">
                                            @if (@Model?.BillingAddress != null)
                                            {
                                                <span>@Model?.BillingAddress</span>
                                            }
                                            else
                                            {
                                                <small class="text-carrot text-lowercase">No Billing Address Found!</small>
                                            }
                                        </span>
                                    </div>
                                    <div class="mb-3">
                                        <span class="d-block fw-700 text-sm-3">Địa chỉ Công ty</span>
                                        <span class="d-block">
                                            @if (@Model?.ShippingAddress != null)
                                            {
                                                <span>@Model.ShippingAddress</span>
                                            }
                                            else
                                            {
                                                <small class="text-carrot text-lowercase">No Shipping Address Found!</small>
                                            }
                                        </span>
                                    </div>
                                </div>
                                <div class="border-top p-2">
                                    <small class="d-block"><a class="text-sky text-decoration-none" href="javascript:void(0)" data-bs-toggle="modal" data-bs-target="#addressModal">Update Address <i class="fa-solid fa-arrow-up-right-from-square"></i></a></small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addressModal" tabindex="-1" aria-labelledby="addressModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title" id="addressModalLabel">Cập nhật</div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-controller="My" asp-action="Address" method="post">
                    <div class="mb-3">
                        <label asp-for="BillingAddress">Địa chỉ Soát vé</label>
                        <textarea class="form-control" asp-for="BillingAddress" rows="2"></textarea>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ShippingAddress">Địa chỉ Công ty</label>
                        <textarea class="form-control" asp-for="ShippingAddress" rows="2"></textarea>
                    </div>
                    <div class="text-end d-grid gap-2 d-md-block ">
                        <button type="submit" class="btn btn-grass-2 px-5">Cập nhật ngay</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/others/js/customer-account.js"></script>
}
